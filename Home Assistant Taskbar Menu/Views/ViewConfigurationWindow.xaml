<Window x:Class="Home_Assistant_Taskbar_Menu.ViewConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Home_Assistant_Taskbar_Menu"
        mc:Ignorable="d"
        Title="View Configuration"
        Icon="../Images/small.ico"
        Height="450" Width="800">
    <Grid Margin="3">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TreeView Name="TreeView" Margin="0,0,0,6" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" />
        <Button Content="Add Entity to Root" Margin="0,0,3,0" Grid.Row="1" Grid.Column="0" Click="AddEntityClick" />
        <Button Content="Add Node to Root" Margin="3,0,3,0" Grid.Row="1" Grid.Column="1" Click="AddNodeClick" />
        <Button Content="Add Separator to Root" Margin="3,0,3,0" Grid.Row="1" Grid.Column="2" Click="AddSeparatorClick" />
        <Button Content="Save" Margin="3,0,0,0" Grid.Row="1" Grid.Column="3" Click="Save" />
    </Grid>
</Window>